<Window x:Class="ConfigTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigTool"
        mc:Ignorable="d"
        Title="SMTP Relay Agent Config Tool" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="mnuFile" Header="_File">
                <MenuItem x:Name="mnuConnect" Header="_Connect" Click="mnuConnect_Click" />
                <Separator />
                <MenuItem x:Name="mnuExit" Header="_Exit" Click="mnuExit_Click" />
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Vertical">
            
        </StackPanel>
    </DockPanel>
</Window>
